# Electron Environment Variables
NODE_ENV=production

# API Configuration for Desktop App
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000/api/v1

# App Configuration
ELECTRON_IS_DEV=false
ELECTRON_RELOAD=true

# Security Settings
ELECTRON_ENABLE_LOGGING=true
ELECTRON_ENABLE_SECURITY_WARNINGS=false

# Update Configuration
ELECTRON_AUTO_UPDATE=true
ELECTRON_UPDATE_SERVER=https://your-update-server.com

# Window Settings
ELECTRON_WINDOW_WIDTH=1400
ELECTRON_WINDOW_HEIGHT=900
ELECTRON_MIN_WIDTH=1200
ELECTRON_MIN_HEIGHT=700